<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name = "ExoButton" parent="ExoMediaButton">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:padding">10dp</item>
    </style>
    
    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@android:color/white</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@android:color/white</item>
    </style>
    
    <style name="TabText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    
    </style>
    
    <style name = "FloatingButtonBrowser">
        <item name = "useCompatPadding">true</item>
        <item name = "fabSize">normal</item>
        <item name = "layout_constraintBottom_toBottomOf">parent</item>
    </style>

</resources>
