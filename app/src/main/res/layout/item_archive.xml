<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    >
    
    <data>
        
        <variable
            name = "video"
            type = "blog.cmcmcmcm.webvideoarchiving.data.Video"
            />
    </data>
    
    <android.support.v7.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_margin = "6dp"
        android:background = "@android:color/black"
        >
        
        <android.support.constraint.ConstraintLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:minHeight="300dp"
            android:layout_marginBottom = "3dp"
            android:background = "@android:color/white"
            >
            
            <com.google.android.exoplayer2.ui.PlayerView
                android:id = "@+id/player_item_archive"
                android:layout_width = "0dp"
                android:layout_height = "0dp"
                android:background = "@android:color/black"
                app:controller_layout_id = "@layout/exo_controller_archive"
                app:layout_constraintDimensionRatio = "16:9"
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf="parent"
                app:surface_type = "texture_view"
                app:use_controller = "true"
                />
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_archive"
                android:layout_width = "0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_item_archive"
                android:layout_height = "wrap_content"
                />
            
        
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>